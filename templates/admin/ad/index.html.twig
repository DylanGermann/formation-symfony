{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces!
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Gestion des Annonces</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>ID</th>
					<th>TITRE</th>
					<th>AUTEUR</th>
					<th class="text-center">RESERVATIONS</th>
					<th class="text-center">NOTE</th>
					<th>ACTIONS</th>
				</tr>
			</thead>
			<tbody>
				{% for ad in pagination.data %}
					<tr>
						<td>{{ad.id}}
						</td>
						<td>{{ad.title}}
						</td>
						<td>
							<img src="{{ad.author.picture}}" alt="Avatar de {{ad.author.fullname}}" class="avatar avatar-micro mr-2">
							{{ad.author.fullName}}
						</td>
						<td class="text-center">
							<span class="badge bg-primary rounded-pill">{{ad.bookings | length}}
							</span>
						</td>
						<td class="text-center">
							<span class="badge bg-primary rounded-pill">{{ad.avgRatings | number_format(1, ',', ' ')}}
							</span>
						</td>
						<td>
							<a href="{{path('admin_ads_edit', {id: ad.id})}} " class="btn btn-primary">
								<i class="fas fa-edit"></i>
							</a>
							<a href="{{path('admin_ads_delete', {id:ad.id})}} " class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
	{{pagination.display()}}
{% endblock %}
